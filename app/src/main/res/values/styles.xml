<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="editText_defual">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:background">@drawable/background_defual</item>
        <item name="android:textColorHint">#a6a5a6</item>
    </style>

    <style name="Sign_Button_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/sign_button_select</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="windowAnimation" parent="android:Animation">
        <item name="android:windowExitAnimation">@anim/window_trastion_out</item>
    </style>

</resources>
